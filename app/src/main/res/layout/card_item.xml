<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardElevation="2dp"
        android:layout_marginBottom="9dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:background="@drawable/selector_row"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/fin"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/textGara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="100 STILE"
                android:layout_marginTop="10dp">
            </TextView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/view"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img"
                android:layout_below="@+id/textGara"></View>

            <TextView
                android:id="@+id/textDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textGara"
                android:layout_toRightOf="@+id/img"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="NAPOLI - 26/11/2017 - 25m">
            </TextView>

            <TextView
                android:id="@+id/textTempo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/textDesc"
                android:layout_toRightOf="@+id/img"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="#008000"
                android:text="01'17''28">
            </TextView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
